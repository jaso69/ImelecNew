---
import Asistente from "./Asistente.astro";
import Formulario from "./Formulario.astro";
import Header from "./Header.astro";

---

<Header title="Empresa de Electricidad en Madrid" description="Imelec electricidad, Telefono: 691 50 23 61, Email: info@imelec.es, Dirección: Ctra de Loeches 55, 28850, Torrejon de Ardoz, Madrid"/>
<section class="flex flex-col container mx-auto py-2 px-4 md:px-0 items-center">
    <div class="flex flex-col items-center justify-center mb-4">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
            Contacto
        </h1>
        <p class="text-gray-500 dark:text-gray-400">
            ¿Tienes alguna duda? ¡Contacta con nosotros!
        </p>
    </div>
    <Formulario />
</section>

<script>

    import { enviarCorreo } from "../lib/api.js";

    const form = document.querySelector('form') as HTMLFormElement

    form.addEventListener('submit', async (event) => {
        event.preventDefault()
        await enviarCorreo()
    })

</script>
  
<Asistente />